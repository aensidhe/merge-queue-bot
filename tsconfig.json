{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "alwaysStrict": true,
        "strictNullChecks": true,
        "outDir": "artifacts",
        "moduleResolution": "node",
        "sourceMap": true
    },
    "compileOnSave": true,
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "artifacts"
    ]
}